/* 连接状态指示器 */
.connection-status {
  padding: 10rpx 20rpx;
  background-color: #fff6d9;
  color: #ff9900;
  font-size: 24rpx;
  display: flex;
  align-items: center;
}

/* 头部信息 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: white;
  border-bottom: 1rpx solid #eee;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
}

.refresh-btn {
  display: flex;
  align-items: center;
  color: #666;
  font-size: 28rpx;
}

/* 搜索框 */
.search-box {
  display: flex;
  align-items: center;
  padding: 15rpx 30rpx;
  background-color: #f5f5f5;
}

.search-box input {
  flex: 1;
  padding: 10rpx 20rpx;
  background-color: white;
  border-radius: 10rpx;
  font-size: 28rpx;
}

.search-box .iconfont {
  margin-left: 20rpx;
  color: #666;
}

/* 楼层列表 */
.floor-list {
  padding: 20rpx;
  background-color: #f5f5f5;
}

.floor-item {
  background-color: white;
  border-radius: 15rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.floor-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #f8f8f8;
}

.floor-name {
  font-size: 30rpx;
  font-weight: bold;
}

.floor-status {
  font-size: 26rpx;
  color: #666;
}

.available-count {
  color: #1aad19;
  font-weight: bold;
}

.floor-rooms {
  padding: 20rpx 30rpx;
}

.room-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #eee;
}

.room-name {
  font-size: 28rpx;
}

.room-status {
  font-size: 26rpx;
  color: #666;
}

.more-rooms {
  text-align: right;
  padding: 15rpx 0;
  color: #666;
  font-size: 24rpx;
}

.go-btn {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding: 15rpx 30rpx;
  color: #1aad19;
  font-size: 28rpx;
}

/* 楼层详情弹窗 */
.floor-detail-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 100;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,0.5);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 90%;
  background-color: white;
  border-radius: 20rpx 20rpx 0 0;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx 30rpx;
  border-bottom: 1rpx solid #eee;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
}

.close-btn {
  font-size: 36rpx;
  color: #666;
}

.modal-body {
  flex: 1;
  overflow-y: auto;
  padding: 0 30rpx;
}

.floor-overview {
  margin: 30rpx 0;
}

.floor-info {
  margin-bottom: 20rpx;
}

.floor-name {
  font-size: 34rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.floor-status {
  font-size: 28rpx;
  color: #666;
}

.floor-map {
  height: 300rpx;
  margin-top: 20rpx;
  border-radius: 15rpx;
  overflow: hidden;
  background-color: #f5f5f5;
}

.floor-map image {
  width: 100%;
  height: 100%;
}

.rooms-list {
  margin: 30rpx 0;
}

.list-title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.room-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.room-name {
  font-size: 28rpx;
  font-weight: bold;
}

.room-status {
  flex: 1;
  margin: 0 20rpx;
}

.progress-bar {
  height: 12rpx;
  background-color: #f0f0f0;
  border-radius: 6rpx;
}

.progress {
  height: 100%;
  background-color: #1aad19;
  border-radius: 6rpx;
}

.modal-footer {
  padding: 30rpx;
  border-top: 1rpx solid #eee;
}

.modal-footer .go-btn {
  width: 100%;
  background-color: #1aad19;
  color: white;
  text-align: center;
  padding: 20rpx 0;
  border-radius: 15rpx;
  font-size: 30rpx;
  font-weight: bold;
  display: flex;
  justify-content: center;  /* 水平居中 */
  align-items: center;      /* 垂直居中 */
}