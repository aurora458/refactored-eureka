/* 连接状态指示器 */
.connection-status {
  padding: 10rpx 20rpx;
  background-color: #fff6d9;
  color: #ff9900;
  font-size: 24rpx;
  display: flex;
  align-items: center;
}

/* 头部 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: white;
  border-bottom: 1rpx solid #eee;
}

.title {
  font-size: 34rpx;
  font-weight: bold;
}

.refresh-btn {
  display: flex;
  align-items: center;
  color: #666;
  font-size: 28rpx;
}

.refresh-btn .iconfont {
  margin-right: 8rpx;
}

/* 筛选栏 */
.filter-bar {
  padding: 15rpx 30rpx;
  background-color: white;
  border-bottom: 1rpx solid #eee;
}

.filter-group {
  margin-bottom: 15rpx;
}

.filter-label {
  display: inline-block;
  width: 100rpx;
  font-size: 28rpx;
  color: #666;
}

.filter-options {
  display: inline-flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.filter-option {
  padding: 8rpx 20rpx;
  background-color: #f5f5f5;
  border-radius: 20rpx;
  font-size: 26rpx;
  color: #666;
}

.filter-option.active {
  background-color: #1aad19;
  color: white;
}

/* 历史列表 */
.history-list {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: calc(100vh - 240rpx);
}

.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  color: #666;
}

.loading .iconfont {
  font-size: 60rpx;
  margin-bottom: 20rpx;
  animation: spin 1.5s linear infinite;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  color: #999;
}

.empty-state image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.history-item {
  background-color: white;
  border-radius: 15rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.library-name {
  font-size: 30rpx;
  font-weight: bold;
}

.status {
  padding: 5rpx 15rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: bold;
}

.status-active {
  background-color: #fff3cd;
  color: #ff9900;
}

.status-completed {
  background-color: #d4edda;
  color: #1aad19;
}

.status-canceled {
  background-color: #f8d7da;
  color: #e64340;
}

.status-expired {
  background-color: #f5f5f5;
  color: #999;
}

.history-body {
  margin-bottom: 15rpx;
  border-left: 4rpx solid #f0f0f0;
  padding-left: 15rpx;
}

.info-row {
  display: flex;
  margin-bottom: 10rpx;
  font-size: 26rpx;
}

.label {
  color: #666;
  width: 120rpx;
}

.value {
  flex: 1;
  color: #333;
}

.history-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 15rpx;
  border-top: 1rpx dashed #eee;
  font-size: 24rpx;
  color: #999;
}

.history-footer .iconfont {
  color: #ccc;
  font-size: 30rpx;
}

/* 历史详情弹窗 */
.detail-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 100;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 80%;
  background-color: white;
  border-radius: 20rpx 20rpx 0 0;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx 30rpx;
  border-bottom: 1rpx solid #eee;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
}

.close-btn {
  font-size: 36rpx;
  color: #666;
}

.modal-body {
  flex: 1;
  overflow-y: auto;
  padding: 30rpx;
}

.detail-section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
  padding-left: 10rpx;
  border-left: 4rpx solid #1aad19;
}

.detail-table {
  background-color: #f9f9f9;
  border-radius: 10rpx;
  overflow: hidden;
}

.table-row {
  display: flex;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.table-row:last-child {
  border-bottom: none;
}

.table-label {
  width: 140rpx;
  font-size: 26rpx;
  color: #666;
}

.table-value {
  flex: 1;
  font-size: 26rpx;
  color: #333;
  word-break: break-all;
}

.cancel-reason {
  padding: 20rpx;
  background-color: #f9f9f9;
  border-radius: 10rpx;
  font-size: 26rpx;
  color: #333;
}

.modal-footer {
  padding: 25rpx 30rpx;
  border-top: 1rpx solid #eee;
  display: flex;
  justify-content: center;
}

.modal-footer .close-btn {
  width: 100%;
  background-color: #1aad19;
  color: white;
  text-align: center;
  padding: 20rpx 0;
  border-radius: 15rpx;
  font-size: 30rpx;
  font-weight: bold;
}

/* 动画 */
@keyframes spin {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}