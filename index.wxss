/* 连接状态指示器 */
.connection-status {
  padding: 8px 16px;
  background-color: #fff6d9;
  color: #ff9900;
  font-size: 14px;
  display: flex;
  align-items: center;
}

/* 图书馆列表项 */
.library-item {
  padding: 16px;
  margin: 10px;
  border-radius: 8px;
  background-color: white;
  box-shadow: 0 2px 5px rgba(0,0,0,0.1);
}

.library-name {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 8px;
}

.seats-info {
  font-size: 14px;
}

.progress-bar {
  height: 10px;
  background-color: #f0f0f0;
  border-radius: 5px;
  margin: 8px 0;
}

.progress {
  height: 100%;
  border-radius: 5px;
  transition: width 0.5s ease;
}

.update-time {
  font-size: 12px;
  color: #888;
}